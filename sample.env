# Server environment
NODE_ENV=development
PORT=8080

# Frontend base URL used for redirects after auth
CLIENT_URL=http://localhost:8080

# Database (MongoDB)
# Local example URI (adjust as needed)
MONGO_URI=mongodb://127.0.0.1:27017/email_workflow_tool

# Auth/JWT
JWT_SECRET=dev-secret-change-me-32chars-minimum

# Google OAuth (must match values configured in Google Cloud Console)
GOOGLE_CLIENT_ID=000000000000-aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=000000000000000000000000
# Must match your deployment base URL + /api/auth/google/callback
# For local dev with Vite dev server + Express proxy on the same port:
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# Optional: OpenRouter for AI suggestions (otherwise local fallbacks are used)
OPENROUTER_API_KEY=sk-or-00000000000000000000000000000000
OPENROUTER_MODEL=openrouter/auto
